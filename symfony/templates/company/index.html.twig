{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="e-panel card">
        <div class="card-body">
            <div class="card-title">
                <div class="row flex-lg-nowrap justify-content-between">
                    <div class="col">
                        <h2 class="mr-2"><span>Companies</span></h2>
                    </div>
                    <div class="px-3">
                        <a href="{{ path('company_new') }}" class="btn btn-md btn-primary">Create new</a>
                    </div>
                </div>
            </div>
            <div class="e-table">
                <div class="table-responsive table-lg mt-3">
                    <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th class="max-width">Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th>Actions</th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for company in pager.getCurrentPageResults() %}
                            <tr>
                                <td>{{ company.id }}</td>
                                <td>{{ company.name }}</td>
                                <td>{{ company.phone }}</td>
                                <td>{{ company.email }}</td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td class="text-center align-middle">
                                        <div class="btn-group align-top">
                                            <a href="{{ path('company_edit', {'id': company.id}) }}" class="btn btn-sm btn-outline-secondary badge">edit</a>
                                            <a href="{{ path('company_edit', {'id': company.id}) }}" class="btn btn-sm btn-outline-secondary badge">delete</a>
                                        </div>
                                    </td>
                                {% endif %}
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    </table>
                </div>
                {{ include('_paginator.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
